{
  "_meta": {
    "description": "Generic composable template for log data with 1 primary shard",
    "ecs_version": "8.0.0"
  },
  "composed_of": [
    "ecs_8.0.0_base",
    "ecs_8.0.0_destination",
    "ecs_8.0.0_host",
    "ecs_8.0.0_http",
    "ecs_8.0.0_network",
    "ecs_8.0.0_source",
    "ecs_8.0.0_url",
    "ecs_8.0.0_user",
    "ecs_8.0.0_event"
  ],
  "index_patterns": [
    "logs-*",
    "log-*"
  ],
  "priority": 1,
  "template": {
    "mappings": {
      "date_detection": false,
      "dynamic_templates": [
        {
          "strings_as_text_and_keyword": {
            "match_mapping_type": "string",
            "mapping": {
              "type": "text",
              "fields": {
                "keyword": {
                  "type": "keyword",
                  "ignore_above": 256
                }
              }
            }
          }
        }
      ]
    },
    "settings": {
      "index": {
        "mapping": {
          "total_fields": {
            "limit": 3000
          }
        },
        "refresh_interval": "30s",
        "number_of_shards": 1,
        "number_of_replicas": 1,
        "codec": "zstd",
        "codec.compression_level": 6
      }
    }
  }
}